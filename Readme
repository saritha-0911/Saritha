#include<stdio.h>

int main()
{
    int num,rem,sum=0,
    clrsor();
    printf ("enter any number\n");
    scanf("%d", &num);
    do
     {
       rem=num%10;
       sum=sum+rem;
       num=num/10;
      }
    while(num!=0);
    printf ("sum of digits=%d",sum);
    
    return 0;
}
    
      
     



  
    
    
    
   
 



